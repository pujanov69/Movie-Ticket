<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>Controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>Controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>Controller.FileUploadHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Movies</servlet-name>
        <servlet-class>Controller.Movies</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upcoming_Movies_FileUploadHandler</servlet-name>
        <servlet-class>Controller.Upcoming_Movies_FileUploadHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Show_Time_Controller</servlet-name>
        <servlet-class>Controller.Show_Time_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ticket_Prices_Controller</servlet-name>
        <servlet-class>Controller.Ticket_Prices_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditNowShowingMoviesHandler</servlet-name>
        <servlet-class>Controller.EditNowShowingMoviesHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>Controller.BookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUpcomingMoviesHandler</servlet-name>
        <servlet-class>Controller.EditUpcomingMoviesHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/FileUploadHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Movies</servlet-name>
        <url-pattern>/Movies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upcoming_Movies_FileUploadHandler</servlet-name>
        <url-pattern>/Upcoming_Movies_FileUploadHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Show_Time_Controller</servlet-name>
        <url-pattern>/Show_Time_Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ticket_Prices_Controller</servlet-name>
        <url-pattern>/Ticket_Prices_Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/BookingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditNowShowingMoviesHandler</servlet-name>
        <url-pattern>/EditNowShowingMoviesHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUpcomingMoviesHandler</servlet-name>
        <url-pattern>/EditUpcomingMoviesHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
